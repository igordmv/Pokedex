<resources>

    <!-- Base application theme. -->
    <style name="Theme.Base.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:progressBarStyle">@style/BaseProgressBarStyle</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressDrawable">@drawable/rotate_shape_gradient_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/rotate_shape_gradient_progressbar</item>
    </style>

    <style name="SplashTheme" parent="Theme.Base.NoActionBar">
    </style>

    <style name="MainTheme" parent="Theme.Base.NoActionBar">
    </style>

</resources>
